<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Comment</h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/questions/<%= question_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea id="comment-area" onkeyup="AutoGrowTextArea(this)" rows="5" name="comment[text]" class="form-control" required><%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
             <a href="javascript:history.back()">Go Back</a>
             <a id="insert-code" style="float: right;" onclick="insertAtCaret('comment-area', '<code>\n</code>');return false;">Insert code</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>