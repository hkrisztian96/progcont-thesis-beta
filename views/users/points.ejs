<% include ../partials/header %>

<div class="container">
        

		<div class="row omb_row-sm-offset-3 col-sm-8">
			<div class="col-xs-12">	
					<table class="table table-responsive table-hover">
						<thead>
						<tr>
						  <th>Ranking</th>
						  <th>Username</th>
						  <th>Points</th>
						</tr>
						</thead>
						<tbody>
						<% users.forEach(function(user, i) { %>
							<tr>
								<td class="align-middle"> <%= i+1 %>.</td>
						  		<td class="align-middle"><a class="username-link" href="/users/<%= user._id %>/edit"><%= user.username %></a></td>
						  		<td class="align-middle"><%= user.points %></td>
							</tr>
						<% }); %>
						</tbody>
					</table>

			</div>
    	</div>
	</div>


</div>



<% include ../partials/footer %>