<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;"><% if (currentUser._id.equals(paramUser._id)) { %> Reset Password <% } else { %> View Account <% } %></h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/users/<%= user._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control text-center" placeholder="Username" value="<%= paramUser.username %>" disabled></input>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control text-center" placeholder="Points" value="<%= paramUser.points %> point<% if (paramUser.points > 1) { %>s<% } %>" disabled></input>
                </div>
                <span class="help-block"></span>
                <% if (currentUser._id.equals(paramUser._id)) { %>
                <div class="form-group">
                    <input type="password" class="form-control" name="user[old_password]" placeholder="Password"></input>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="user[new_password1]" placeholder="New Password"></input>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="user[new_password2]" placeholder="New Password Again"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Save Changes</button>
                </div>
                <% } %>
            </form>
             <a href="javascript:history.back()">Go Back</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>