<% include ../partials/header %>

<div class="container">
    <div class="row">
    <h1 style="text-align: center;">Ask your question</h1>
        <div style="width: 50%; margin: 25px auto">
            <form action="/questions" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="title" placeholder="Your question in short..." required></input>
                </div>
                <div class="form-group">
                    <input type="url" class="form-control" name="link" placeholder="Link" required></input>
                </div>
                <div class="form-group">
                    <textarea id="question-area" onkeyup="AutoGrowTextArea(this)" type="text" class="form-control" rows="5" name="questionString" placeholder="Ask your question..."></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
             <a href="javascript:history.back()">Go Back</a>
             <a id="insert-code" style="float: right;" onclick="insertAtCaret('question-area', '<code>\n</code>');return false;">Insert code</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>