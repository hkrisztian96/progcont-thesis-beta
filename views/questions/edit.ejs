<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Question</h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/questions/<%= question._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="question[questionString]" placeholder="Name" value="<%= question.questionString %>" ></input>
                </div>
                <div class="form-group">
                    <input type="url" class="form-control" name="question[link]" placeholder="Exiration Date" value="<%= question.link %>" ></input>
                </div>
                <div class="form-group">
                    <textarea id="question-area" onkeyup="AutoGrowTextArea(this)" type="text" class="form-control" name="question[code]" placeholder="Description"><%= question.code %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
             <a href="javascript:history.back()">Go Back</a>
             <a id="insert-code" style="float: right;" onclick="insertAtCaret('question-area', '<code>\n</code>');return false;">Insert code</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>