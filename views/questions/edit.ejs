<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= question.name %></h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/questions/<%= question._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="question[name]" placeholder="Name" value="<%= question.name %>" ></input>
                </div>
                <div class="form-group">
                    <input type="Date" class="form-control" name="question[expiration_date]" placeholder="Exiration Date" value="<%= question.expiration_date %>" ></input>
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" name="question[description]" placeholder="Description"><%= question.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
             <a href="/questions">Go Back</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>